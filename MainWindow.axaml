<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="clr-namespace:Avalonia.Labs.Gif;assembly=Avalonia.Labs.Gif"
        xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
        xmlns:local="clr-namespace:DesktopMaid"
        x:DataType="local:MainWindow"
        x:Class="DesktopMaid.MainWindow"
        Title="Desktop Pet"
        Width="150"
        Height="150"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        Background="Transparent"
        Topmost="True"
        CanResize="False">
    
    <!-- This is where your GIF will go -->
    <gif:GifImage Name="PetImage" 
           Source="{ Binding FilePath }"
           Stretch="Fill" />
    
</Window>