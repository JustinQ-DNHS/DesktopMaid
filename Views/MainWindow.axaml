<!-- xmlns:gif="clr-namespace:Avalonia.Labs.Gif;assembly=Avalonia.Labs.Gif"                         -->
<!-- Adds GIF element to interpret GIFImages, should be removed when converted to a Image format    -->

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="clr-namespace:Avalonia.Labs.Gif;assembly=Avalonia.Labs.Gif"
        xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
        xmlns:local="clr-namespace:DesktopMaid.ViewModels"
        x:DataType="local:MainWindowViewModel"
        x:Class="DesktopMaid.Views.MainWindow"
        PointerPressed="Window_PointerPress" PointerReleased="Window_PointerRelease"
        Width="150" Height="150" Background="Transparent" Topmost="True"
        SystemDecorations="None"
        CanResize="False">
    
    <!-- GIF ELEMENT, //TODO CHANGE TO BE A IMAGE AND CHANGE IMAGE RATHER THAN USE A GIF -->
    <gif:GifImage Name="PetImage" 
           Source="{ Binding GifPath }"
           Stretch="Fill" />
</Window>